<% layout('layouts/boilerplate') %>
  <h1>Seasons</h1>
  <div>
    <a href="/seasons/new">New Season</a>
  </div>
  <ul>
    <% for (let season of seasons) {%>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= season.image %>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= season.year %></h5>
              <p class="card-text"><%= season.description %></p>
              <p class="card-text">
                <small class="text-muted">Test</small>
              </p>
              <a class="btn btn-primary" href="seasons/<%= season._id %>">View <%= season.year %></a>
            </div>
          </div>
        </div>
      </div>
      <li><a href="/seasons/<%= season._id%>"><%=season.name%></a></li>
    <% } %>
  </ul>
