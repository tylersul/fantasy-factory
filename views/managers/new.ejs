<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Manager</h1>
  <div class="col-6 offset-3">
    <form action="/managers" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="manager[name]">
      </div class="mb-3">
      <div>
        <label class="form-label" for="description">Description</label>
        <input class="form-control" type="text" id="description" name="manager[description]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="wins">Wins</label>
        <input class="form-control" type="text" id="wins" name="manager[wins]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="losses">Losses</label>
        <input class="form-control" type="text" id="losses" name="manager[losses]">
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Manager</button>
      </div>
      <div>
        <a href="/managers">Back to All Managers -></a>
      </div>
    </form>
  </div>
</div>